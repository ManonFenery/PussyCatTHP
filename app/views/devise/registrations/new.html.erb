<!-- Form -->
<div class="container text-center mb-3 mt-5">
  <div class="row">
      <div class="col-md-6 pb-5">
        <h3 class="h4 pb-1">Inscris Toi</h3>
          <p>Enregistre-toi pour commander les plus belles images de chat.</p>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="row">
          <div class="col-sm-6">
            <%= f.label :email %><br/>
            <div class="input-group form-group">
            <div class="input-group-prepend"><span class="input-group-text"><i class="fas fa-envelope"></i></i></span></div>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            <div class="invalid-feedback">Rentre une adresse mail valide</div>
            </div>
          </div>
          <div class="col-sm-6">
          </div>
          <div class="col-sm-6">
           <%= f.label :mot_de_passe %><br/>
            <div class="input-group form-group">
            <div class="input-group-prepend"><span class="input-group-text"><i class="fas fa-lock"></i></i></span></div>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
            <div class="invalid-feedback">Mot de passe obligatoire</div>
            </div>
          </div>
          <div class="col-sm-6">
            <div class="form-group">
            <%= f.label :confirmation_mot_de_passe %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            <div class="invalid-feedback">Les mots de passe ne sont pas identiques</div>
            </div>
            </div>
          </div>
          <div>
            <%= f.submit "M'inscrire", class: "btn btn-primary" %>
          </div>
      <% end %>
      </div>
    </div>
</div>