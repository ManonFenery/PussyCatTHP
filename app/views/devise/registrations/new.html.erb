<div class="page-title d-flex" aria-label="Page title" style="background-image: url(img/page-title/shop-pattern.jpg);">
  <div class="container text-left align-self-center">
    <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="index.html">Home</a>
      </li>
      <li class="breadcrumb-item"><a href="account-orders.html">Account</a>
      </li>
    </ol>
    </nav>
    <h1 class="page-title-heading">S'inscrire</h1>
  </div>
</div>

<!-- Form -->
<div class="container mb-3">
  <div class="row">
    <div class="col-md-6 pb-5">
    <h3 class="h4 pb-1">Inscris Toi</h3>
    <p>Enregistre toi pour commander les plus belles images de chat.</p>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="row">
        <div class="col-sm-6">
          <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          <div class="invalid-feedback">Rentre une adresse mail valide</div>
          </div>
        </div>
        <div class="col-sm-6">
        </div>
        <div class="col-sm-6">
          <div class="form-group">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          <div class="invalid-feedback">Mot de passe obligatoire</div>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="form-group">
          <%= f.label :confirmation_mot_de_passe %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          <div class="invalid-feedback">Les mots de passe ne sont pas identiques</div>
          </div>
          </div>
        </div>
        <div>
          <%= f.submit "M'inscrire", class: "btn btn-primary" %>
        </div>
    <% end %>
    </div>
  </div>
</div>

