<div class="container mb-3">
  <div class="row">
    <div class="col-md-6 pb-5">
    <h3 class="h4 pb-1">Rentre ton Mail</h3>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <div class="row">
        <div class="col-sm-6">
          <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          <div class="invalid-feedback">Rentre une adresse mail valide</div>
          </div>
        </div>
        <div class="col-sm-6">
        </div>
        <div class="col-sm-6">
          <%= f.submit "Nouveau mot de passe", class: "btn btn-success mt-2 mb-2" %>
        </div>
    </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
</div>
